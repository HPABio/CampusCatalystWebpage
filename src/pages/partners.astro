---
import Layout from "../layouts/main.astro";
import { Footer } from "../components/Footer";
import "../styles/global.css";
import { Image } from "astro:assets";
import nucleateLogo from "../assets/CorporateDesign/partners_nucleate.png";
import biolabsLogo from "../assets/CorporateDesign/partners_biolabs.png";
import biobeyondLogo from "../assets/CorporateDesign/partners_biobeyond.png";
---

<Layout title="Partners | Campus Catalyst">
    <main class="bg-deep-black min-h-screen text-off-white">
        <section class="pt-32 pb-16 px-6 max-w-7xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-black uppercase mb-8">
                Ecosystem <span class="text-acid-lime">Partners</span>
            </h1>
            <p class="text-xl text-off-white/60 max-w-2xl mb-12">
                The Campus Catalyst is built on collaboration. A huge thank you
                to the institutions and companies supporting this mission.
            </p>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-24">
                {
                    [
                        { name: "Nucleate", logo: nucleateLogo, link: "https://nucleate.org" },
                        { name: "BioLabs", logo: biolabsLogo, link: "https://biolabs.io" },
                        { name: "biobeyond", logo: biobeyondLogo, link: "https://biobeyond.eu" }
                    ].map((partner) => (
                        <a href={partner.link}>
                        <div class="aspect-video bg-charcoal border border-graphite rounded-xl flex items-center justify-center p-8 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all">
                            <Image
                                src={partner.logo}
                                alt={partner.name}
                                class={`w-full h-full object-contain ${partner.name === "biobeyond" ? "mix-blend-screen" : "hover:mix-blend-screen hover:contrast-[1.5]"}`}
                            />
                        </div>
                        </a>
                    ))
                }
            </div>

            <div
                class="p-12 bg-charcoal border border-graphite rounded-3xl text-center"
            >
                <h2 class="text-3xl md:text-5xl font-black uppercase mb-6">
                    Become a <span class="text-acid-lime">Partner</span>
                </h2>
                <p class="text-off-white/60 max-w-xl mx-auto mb-8">
                    Help us supercharge the life science ecosystem in Southwest
                    Germany.
                </p>
                <a
                    href="/contact"
                    class="inline-block px-8 py-4 bg-acid-lime text-deep-black rounded-full font-black uppercase tracking-tight hover:scale-105 transition-transform"
                >
                    Get in Touch
                </a>
            </div>
        </section>
        <Footer client:visible />
    </main>
</Layout>
