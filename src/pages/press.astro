---
import Layout from "../layouts/main.astro";
import { Footer } from "../components/Footer";
import "../styles/global.css";
---

<Layout title="Press | Campus Catalyst">
    <main class="bg-deep-black min-h-screen text-off-white">
        <section class="pt-32 pb-16 px-6 max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-black uppercase mb-8">
                Press <span class="text-acid-lime">Kit</span>
            </h1>
            <p class="text-xl text-off-white/60 mb-12">
                Download official branding assets and read our latest press
                releases.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div
                    class="p-8 bg-charcoal border border-graphite rounded-2xl flex flex-col items-center text-center"
                >
                    <div
                        class="w-20 h-20 bg-acid-lime rounded-full mb-6 flex items-center justify-center text-deep-black font-black text-2xl"
                    >
                        L
                    </div>
                    <h3 class="text-xl font-black uppercase mb-2">
                        Logos & Assets
                    </h3>
                    <p class="text-off-white/50 text-sm mb-6">
                        High-resolution logos and brand guidelines.
                    </p>
                    <button
                        disabled
                        class="px-6 py-2 border border-white/20 text-white/40 rounded-full text-xs font-black uppercase opacity-50"
                        >Coming Soon</button
                    >
                </div>
                <div
                    class="p-8 bg-charcoal border border-graphite rounded-2xl flex flex-col items-center text-center"
                >
                    <div
                        class="w-20 h-20 bg-acid-lime rounded-full mb-6 flex items-center justify-center text-deep-black font-black text-2xl"
                    >
                        P
                    </div>
                    <h3 class="text-xl font-black uppercase mb-2">
                        Photography
                    </h3>
                    <p class="text-off-white/50 text-sm mb-6">
                        Event photos for media use.
                    </p>
                    <button
                        disabled
                        class="px-6 py-2 border border-white/20 text-white/40 rounded-full text-xs font-black uppercase opacity-50"
                        >Coming Soon</button
                    >
                </div>
            </div>
        </section>
        <Footer client:visible />
    </main>
</Layout>
