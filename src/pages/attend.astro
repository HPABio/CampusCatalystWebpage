---
import Layout from "../layouts/main.astro";
import { Footer } from "../components/Footer";
import "../styles/global.css";
---

<Layout title="Attend | Campus Catalyst">
    <main class="bg-deep-black min-h-screen text-off-white">
        <section class="pt-32 pb-16 px-6 max-w-7xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-black uppercase mb-8">
                Plan Your <span class="text-acid-lime">Visit</span>
            </h1>
            <p class="text-xl text-off-white/60 max-w-2xl mb-12">
                Everything you need to know about attending a Campus Catalyst
                event.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="space-y-12">
                    <div>
                        <h3
                            class="text-2xl font-black uppercase mb-4 text-acid-lime"
                        >
                            Audience Fit
                        </h3>
                        <p class="text-off-white/70">
                            Whether you’re a founder, investor, researcher, or
                            simply curious about the life science energy in
                            Southwest Germany—this is the place for you.
                        </p>
                    </div>
                    <div>
                        <h3
                            class="text-2xl font-black uppercase mb-4 text-acid-lime"
                        >
                            Getting There
                        </h3>
                        <p class="text-off-white/70">
                            BioLabs Heidelberg is located in the Heidelberg
                            Innovation Park (HIP).
                            <br /><br />
                            <strong>Address:</strong><br />
                            Nikola-Tesla-Straße 1<br />
                            69124 Heidelberg
                        </p>
                    </div>
                </div>
                <div
                    class="bg-charcoal border border-graphite rounded-3xl p-8 flex items-center justify-center"
                >
                    <span class="text-white/10 font-black uppercase text-xl"
                        >Interactive Map Placeholder</span
                    >
                </div>
            </div>
        </section>
        <Footer client:visible />
    </main>
</Layout>
